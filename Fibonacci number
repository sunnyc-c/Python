def fibnum(n):
    if n == 0: #basic base
        return 0
    elif n == 1: #another special case
        return 1
    else:
        return (int(fibnum(n-1)) + int(fibnum(n-2)))

print('This programme is designed to find the n th term in fibonacci sequence.')
print(fibnum(int(input('Please input n: '))))
